  <script>
    // Minimal client-side logic: open mailto prefilled or WhatsApp share
    document.getElementById('yr').textContent = new Date().getFullYear();
    const leadForm = document.getElementById('leadForm');
    leadForm.addEventListener('submit', (e) => {
      e.preventDefault();
      const fd = new FormData(leadForm);
      const name = fd.get('name') || 'No name';
      const email = fd.get('email') || '';
      const phone = fd.get('phone') || '+254104543380';
      const service = fd.get('service') || 'General Inquiry';
      const message = fd.get('message') || '';

      // Construct mailto link — opens user's email app to send to charmclassic30@gmail.com
      const subject = encodeURIComponent(`QuickFix lead — ${service} — ${name}`);
      const body = encodeURIComponent(`Time: ${new Date().toISOString()}\nName: ${name}\nEmail: ${email}\nPhone: ${phone}\nService: ${service}\n\nMessage:\n${message}`);
      const mailto = `mailto:charmclassic30@gmail.com?subject=${subject}&body=${body}`;
      window.location.href = mailto;
    });

    document.getElementById('waQuick').addEventListener('click', () => {
      const fd = new FormData(leadForm);
      const name = fd.get('name') || 'No name';
      const phone = fd.get('phone') || '+254104543380';
      const service = fd.get('service') || 'General Inquiry';
      const message = fd.get('message') || '';
      const text = `New lead from website%0AName: ${encodeURIComponent(name)}%0APhone: ${encodeURIComponent(phone)}%0AService: ${encodeURIComponent(service)}%0AMessage: ${encodeURIComponent(message)}`;
      // Open WhatsApp chat with prefilled message (opens WhatsApp or WhatsApp Web)
      window.open(`https://wa.me/254104543380?text=${text}`, '_blank');
    });

    // Scroll to form when user clicks main CTA
    document.getElementById('bookBtn').addEventListener('click', () => {
      document.getElementById('leadForm').scrollIntoView({behavior:'smooth', block:'center'});
    });
  </script>
